<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:olympus="http://schemas.ngratis.com/2014/olympus">
  <Style
    x:Key="{x:Type olympus:AweSystemBrowserButton}"
    BasedOn="{StaticResource {x:Type Button}}"
    TargetType="{x:Type olympus:AweSystemBrowserButton}" />
  <Style
    x:Key="Cop.AweSystemBrowserButton.Normal"
    BasedOn="{StaticResource {x:Type olympus:AweSystemBrowserButton}}"
    TargetType="{x:Type olympus:AweSystemBrowserButton}">
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="FontFamily" Value="Segoe UI Semilight" />
    <Setter Property="FontSize" Value="11pt" />
    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
    <Setter Property="Padding" Value="5,2" />
  </Style>
</ResourceDictionary>