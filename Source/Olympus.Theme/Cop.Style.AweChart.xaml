<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:olympus="http://schemas.ngratis.com/2014/olympus"
  xmlns:oxy="http://oxyplot.org/wpf">
  <ResourceDictionary.MergedDictionaries>
    <olympus:SharedResourceDictionary Source="/nGratis.Cop.Olympus.Wpf;component/Cop.Converter.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style x:Key="{x:Type olympus:AweChart}" TargetType="olympus:AweChart">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="olympus:AweChart">
          <oxy:PlotView
            Background="{DynamicResource Cop.Brush.Application.Background}"
            DefaultTrackerTemplate="{x:Null}"
            Model="{Binding Configuration, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay, Converter={StaticResource Cop.Converter.ChartConfigurationToPlotModelConverter}}" />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>