<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:olympus="http://schemas.ngratis.com/2014/olympus">
  <ResourceDictionary.MergedDictionaries>
    <olympus:SharedResourceDictionary Source="/nGratis.Cop.Olympus.Wpf.Theme;component/Cop.Palette.Generic.xaml" />
    <olympus:SharedResourceDictionary Source="/nGratis.Cop.Olympus.Wpf.Theme;component/Cop.Style.TextBlock.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <Style
    x:Key="{x:Type olympus:AweTileGroup}"
    TargetType="{x:Type olympus:AweTileGroup}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type olympus:AweTileGroup}">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
              Grid.Row="0"
              Margin="0,0,0,4"
              HorizontalAlignment="Right"
              Foreground="{DynamicResource Cop.Brush.Accent}"
              Style="{StaticResource Cop.TextBlock.Base}"
              Text="{TemplateBinding Header}" />
            <Border
              Grid.Row="1"
              BorderBrush="{DynamicResource Cop.Brush.Shade2}"
              BorderThickness="1,1,0,0">
              <ContentControl
                Margin="8,8,0,0"
                Content="{TemplateBinding Content}" />
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>